        android:layout_marginLeft="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Collection"
        android:id="@+id/tvcollection"
        android:layout_marginTop="26dp"
        android:layout_below="@+id/tvfragprofileemail"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="5dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sync now"
        android:id="@+id/buSync"
        android:layout_above="@+id/cbSync"
        android:layout_alignLeft="@+id/cbSync"
        android:layout_alignStart="@+id/cbSync" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="sync status"
        android:id="@+id/textView7"
        android:layout_above="@+id/cbSync"
        android:layout_toRightOf="@+id/buSync"
        android:layout_toEndOf="@+id/buSync" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Share My Collection"
        android:id="@+id/textView8"
        android:layout_above="@+id/buSync"
        android:layout_alignLeft="@+id/buSync"
        android:layout_alignStart="@+id/buSync" />


